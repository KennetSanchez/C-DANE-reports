<Window x:Class="C_DANE_reports.Chart"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:C_DANE_reports"
        mc:Ignorable="d"
        Title="Chart" Height="450" Width="800">
    
    <Window.DataContext>
        <local:MainWindow/>
    </Window.DataContext>
    <Grid>
        <StackPanel>
            <ListBox x:Name="barChart" FontSize="30" Height="351">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Rectangle Height="40" Width="100" Fill="Cyan">
                        </Rectangle>
                    </DataTemplate>
                </ListBox.ItemTemplate>

                <ListBoxItem x:Name="islandsBar"/>
                <ListBoxItem x:Name="townsBar"/>
                <ListBoxItem x:Name="nonMunicipalizedAreaBar"/>

            </ListBox>
        </StackPanel>
    </Grid>
</Window>
