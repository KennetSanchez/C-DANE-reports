<Window x:Class="C_DANE_reports.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"       
        xmlns:local="clr-namespace:C_DANE_reports"
        WindowStartupLocation="CenterScreen"                  
        mc:Ignorable="d" 
        Title="Selección de datos" Height="300" Width="400">


    <Grid x:Name="fileChooserPane" Visibility="Visible" VerticalAlignment="Top" Height="238" Margin="0,0,0,0">
        <Label Content="Selección base de datos" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" FontFamily="Consolas" FontSize="18"/>

        <Button  Content="Elegir archivo" HorizontalAlignment="Center" Margin="0,204,0,0" VerticalAlignment="Top" Click="btnOpenFile_Click" FontFamily="Consolas" Background="#FFBE0C4D" Foreground="White" Height="23" Width="120" BorderThickness="0,1,1,1">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="15"/>
                </Style>
            </Button.Resources>
        </Button>

    </Grid>
    
    
</Window>
    
    
